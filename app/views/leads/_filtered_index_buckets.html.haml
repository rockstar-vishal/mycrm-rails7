- if @company.dead_status_ids.present?
  .lead-card.lead-dead
    = link_to leads_path({lead_statuses: @company.dead_status_ids, is_advanced_search: true}.merge!(params)), class: "lead-card-link" do
      .lead-card-icon#dead_lead_counts
      .lead-card-body
        %span.title Drop off Leads
        %span.subtitle Closed
