
.lead-card.lead-follow-up
  = link_to leads_path({todays_call_only: true, is_advanced_search: true}.merge!(params)), class: "lead-card-link" do
    .lead-card-icon.today_calls_leads_counts
    .lead-card-body
      %span.title Active Tasks
      %span.subtitle Calls Today
.lead-card.lead-backlog
  = link_to leads_path({backlogs_only: true, is_advanced_search: true}.merge!(params)), class: "lead-card-link" do
    .lead-card-icon= @leads.backlogs_for(@company).count
    .lead-card-body
      %span.title MFA
      %span.subtitle Missed Future Activity
- if @company.setting.present? && @company.enable_visit_expiring_card
  .lead-card.lead-visit-expiring
    = link_to leads_path(visit_expiring: true, is_advanced_search: true), class: "lead-card-link" do
      .lead-card-icon.visit_expiration_count
      .lead-card-body
        %span.title Visit Expiry
        %span.subtitle Soon
- if @company.secondary_source_enabled
  .lead-card.lead-merge
    = link_to leads_path(is_advanced_search: true, merged: true), class: "lead-card-link" do
      .lead-card-icon.merge_lead_counts
      .lead-card-body
        %span.title Lead Merge
        %span.subtitle Duplicates

- if @company.hot_status_ids.reject(&:blank?).present?
  .lead-card.lead-hot
    = link_to leads_path({lead_statuses: @company.hot_status_ids, is_advanced_search: true}.merge!(params)), class: "lead-card-link" do
      .lead-card-icon= @leads.where(status_id: @company.hot_status_ids).count
      .lead-card-body
        %span.title Hot Leads
        %span.subtitle Priority


- if @company.new_status_id.present?
  .lead-card.lead-new
    = link_to leads_path({lead_statuses: [@company.new_status_id], is_advanced_search: true}.merge!(params)), class: "lead-card-link" do
      .lead-card-icon= @leads.where(status_id: @company.new_status_id).count
      .lead-card-body
        %span.title New Leads
        %span.subtitle Fresh
  

- if @company.booking_done_id.present?
