.modal-header
  %h5.modal-title Edit Lead #{@lead.name}
  %button.close{"aria-label" => "Close", "data-bs-dismiss" => "modal", :type => "button"}
    %span{"aria-hidden" => "true"} Ã—
.modal-body
  = bootstrap_form_for @lead, remote: true do |f|
    - if @lead.errors.any?
      #error_explanation
        %h2
          = pluralize(@lead.errors.count, "error")
          prohibited this Lead from being saved:
        %ul
          - @lead.errors.full_messages.each do |message|
            %li= message
    .row
      .col-md-6
        .form-group
          - users = @company.users.active
          = f.select :user_id, options_from_collection_for_select(users.order('name'), :id, :name, @lead.user_id), {prompt: (), label: 'Assign To'}, class: 'form-control'
      .col-md-6
        .form-group
          - users = @company.users.active
          = f.select :closing_executive, options_from_collection_for_select(users.meeting_executives.order('name'), :id, :name, @lead.closing_executive), {prompt: true, label: "Closing Manager"}, class: 'form-control chosen-select'
    %div
      .col-md-12
        .form-group
          = button_tag type: "submit", class: "btn btn-primary", data: {disable_with: "Please Wait..."} do
            = fa_icon "floppy-o"
            Save
          = link_to onsite_leads_path, class: "btn btn-danger" do
            = fa_icon "close"
            Cancel