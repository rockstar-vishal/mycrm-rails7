.content-wrapper
  .content-header
    .container-fluid
      .row.mb-2
        .col-md-9
          %ol.breadcrumb
            %li.breadcrumb-item
              %a{:href => "/"} Home
            %li.breadcrumb-item.active Payment Plans
          %h1.m-0.text-dark Payment Plans
  .content
    .container-fluid
      .row
        .col-lg-12
          .card
            .card-header
              .pull-left.col-md-5
                = form_tag payment_plans_path, method: :get do
                  .input-group.input-group-sm
                    = text_field_tag :search_query, params[:search_query], class: "form-control", placeholder: "Search by Plan title"
                    .input-group-btn
                      = button_tag type: "submit", class: "btn btn-default btn-sm pd-fixes" do
                        = fa_icon "search"
                      = link_to payment_plans_path, class: "btn btn-default btn-sm pd-fixes" do
                        = fa_icon "refresh"
              .float-right
                .input-group
                  .input-group-btn
                    = link_to 'Add New PaymentPlan', new_payment_plan_path, class: 'btn btn-primary float-right btn-sm'
            .card-body
              .table-responsive
                %table.table.table-bordered.table-hover.dataTables.table-sm.responsive.nowrap{style: 'width:100%!important'}
                  %thead
                    %tr
                      %th.all Title
                      %th Action

                  %tbody
                    - @payment_plans.each do |payment_plan|
                      %tr
                        %td= payment_plan.title
                        %td
                          = link_to (fa_icon "pencil"), edit_payment_plan_path(payment_plan.id), class: "btn btn-primary btn-sm"
                          = link_to payment_plan_path(payment_plan.id), class: "btn btn-danger", method: :delete,
                            data: {:confirm => "Would you like to permanently delete this Plan?", "commit-class" => "btn btn-success", "cancel-class" => "btn btn-danger"}, style: "padding: 0px; width: 20px;" do
                            = fa_icon "trash-o"
          .pagination-custom-holder
            %strong{style: "margin-left: 0;"} Plans Count - #{@payment_plans.count}
            = will_paginate @payment_plans, :class  =>  "ct-pag"
