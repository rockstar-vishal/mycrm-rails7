.content-wrapper
  .content-header
    .container-fluid
      .row.mb-2
        .col-md-9
          %ol.breadcrumb
            %li.breadcrumb-item
              %a{:href => "/"} Home
            %li.breadcrumb-item.active Edit Renewal
          %h1.m-0.text-dark Renewal #{@company.name}

  .content
    .container-fluid
      .row
        .col-lg-12
          %h4.lead-heading.mt-0 Renewals Details
          .lead-body
            .row
              = bootstrap_form_for(@company) do |f|
                - if @company.errors.any?
                  #error_explanation
                    %h2
                      = pluralize(@company.errors.count, "error")
                      prohibited this property configuration from being saved:
                    %ul
                      - @company.errors.full_messages.each do |message|
                        %li= message
                .col-md-12
                  #renewals
                    .row
                      = f.fields_for :renewals do |r|
                        = render "renewal_fields", :f => r
                      .links.pl-2
                        = link_to_add_association "Add Renewals", f, :renewals, class: "btn btn-primary"
                .col-md-12.mt-4
                  .form-group
                    = button_tag type: "submit", class: "btn btn-primary", data: {disable_with: "Please Wait..."} do
                      
                      Save
                    = link_to companies_path, class: "btn btn-danger" do
                      
                      Cancel
:javascript
  $('.multiselect').multiSelect();