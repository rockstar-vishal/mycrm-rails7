.modal-header
  %h5.modal-title Edit Round Robin
  %button.close{"aria-label" => "Close", "data-bs-dismiss" => "modal", :type => "button"}
    %span{"aria-hidden" => "true"} Ã—
.modal-body.show-body
  = form_tag round_robin_users_path, class: 'form-inline' do
    
    .table-responsive
      %table.table.table-hover.dataTables.responsive.nowrap{style: 'width:100%!important'}
        %thead
          %tr
            %th
            %th Name
            %th Email
        %tbody
          - @users.each do |user|
            %tr
              .form-group
                %td 
                  = check_box_tag "users_list[]", user.id, user.round_robin_enabled?
                %td 
                  = user.name
                %td 
                  = user.email
      - if current_user.company.round_robin_enabled
        = button_tag type: "submit", name: "_method", value: "delete", class: 'btn btn-danger pull-right', data: {confirm: "Are you sure?"} do
          Disable
      = button_tag type: "submit", name: "_method", value: "put", class: 'btn btn-primary  pull-right' do
        Enable