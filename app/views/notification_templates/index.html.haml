.content-wrapper
  .content-header
    .container-fluid
      .row.mb-2
        .col-md-12
          %ol.breadcrumb
            %li.breadcrumb-item
              %a{:href => "/"} Home
            %li.breadcrumb-item.active Notification Template
          %h1.m-0 Notification Template
  .content
    .container-fluid
      .row
        .col-lg-12
          .search-card
            .row
              .col-md-3.d-flex.align-items-center
                %h5.mb-0 Notification Template
              .col-md-9
                .group-link
                  = link_to 'Add Template', new_notification_template_path, remote: true, class: 'btn btn-new ml-auto'
              
          .table-body
            .table-responsive
              %table.table.table-hover.dataTables.responsive.nowrap{style: 'width:100%!important'}
                %thead
                  %tr
                    %th.all Name
                    %th.all Body
                    %th.all Template Id
                    %th.all Action
                %tbody
                  - @templates.each do |nt|
                    %tr
                      %td
                        = nt.name
                      %td
                        = nt.body
                      %td
                        = nt.template_id
                      %td
                        = link_to edit_notification_template_path(nt.uuid), remote: true, class: "btn btn-action btn-edit" do
                          = render partial: 'icons/edit'
          - if @templates.present?
            .pagination-custom-holder
              %label{style: "margin-left: 0;"} Templates Count - #{@templates.count}
              = will_paginate @templates, :class  =>  "ct-pag"