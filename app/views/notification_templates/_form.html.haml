= bootstrap_form_for @template,  url: (@template.new_record? ? notification_templates_path : notification_template_path(@template.uuid)),remote: true do |f|
  - if @template.errors.any?
    #error_explanation
      %h2
        = pluralize(@template.errors.count, "error")
        prohibited this Number from being saved:
      %ul
        - @template.errors.full_messages.each do |message|
          %li= message
  .row
    .col-12.required
      = f.text_field :name, class: "form-control", placeholder: "Name"
  - if current_user.company.setting.present? && current_user.company.enable_status_wise_notification
    .row
      .col-md-6
        = f.text_field :sender_id, class: "form-control", placeholder: "Sender ID"
      .col-md-6
        .form-group
          = f.select :notification_category, options_for_select(NotificationTemplate::CATEGORY, f.object.notification_category), {label: 'Notification category', include_blank: "Select"}, {class: 'form-control custom-select'}
  .row
    .col-12
      = f.text_area :body, class: "form-control", placeholder: "Body"
  .row
    .col-12
      = f.text_area :template_id, label: 'DLT Template ID', class: "form-control", placeholder: "DLT Approved Template ID"
  .col-md-12
    .form-group
      = button_tag type: "submit", class: "btn btn-new", data: {disable_with: "Please Wait..."} do
        
        Save
      = link_to notification_templates_path, class: "btn btn-delete" do
        
        Cancel

